    "TypeScript",
    "JavaScript"
  ],
  "author": "Ali Nuraldin",
  "contributors": [
    {
      "name": "Ali Nuraldin",
      "email": "ali@opium.team"
    }
  ],
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/alirun/fakturoid-js/issues"
  },
  "homepage": "https://github.com/alirun/fakturoid-js#readme",
  "dependencies": {
    "axios": "^0.19.2"
  },
  "devDependencies": {
    "@types/node": "^14.0.26",
    "@typescript-eslint/eslint-plugin": "^3.7.0",
    "@typescript-eslint/parser": "^3.7.0",
    "eslint": "^7.5.0",
    "husky": "^4.2.5",
    "typedoc": "^0.17.8",
    "typescript": "^3.9.7"
  },
  "husky": {
